@page
@model OmnibusUI.Pages.Bookhouse.IndexModel
@{
}
<style>
    table, th, td {
        border: 1px solid black
    }
</style>
<body>
	<h1>HEYYY ITS THE BOOKHOUSE PAGE</h1>
	
    <p>
        <a href = "/Bookhouse/Create" class="btn btn-primary"><button>Add Book</button></a>
    </p>

    @if (Model.Bookhouse == null || !Model.Bookhouse.Any())
    {
        <p>No Patrons found.</p>
    }

    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>copiesAvail</th>
                    <th>date</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.Bookhouse)
                {
                    <tr>
                        <td>@b.bookID</td>
                        <td>@b.title</td>
                        <td>@b.copiesAvail</td>
                        <td>@b.publicationDate</td>
                        <td>
                            <a asp-page="./Update" asp-route-id="@b.bookID" class="btn btn-sm btn-warning"><button>Edit</button></a>
                            <a asp-page="./Delete" asp-route-id="@b.bookID" class="btn btn-sm btn-danger"><button>Delete</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>