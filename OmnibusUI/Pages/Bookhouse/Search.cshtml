@page
@model OmnibusUI.Pages.Bookhouse.SearchModel
@{
}


<form method="get">
    <input type="text" name="search" placeholder="Search..." value="@Request.Query["search"]" />
    <button type="submit">Search</button>
</form>

<ul>
    @foreach (var book in Model.Book)
    {
        <li>@book.title</li>
    }
</ul>